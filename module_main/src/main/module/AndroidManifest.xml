<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.liujian.module.main">

    <application
        android:name="debug.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <!--启动页面-->
        <activity android:name="com.example.liujianhui.gohappy.SplashActivity"
            android:theme="@style/customAppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--引导页-->
        <activity android:name="com.example.liujianhui.gohappy.GuideActivity"
            android:theme="@style/customAppTheme"
            android:screenOrientation="portrait">
        </activity>

        <!--测试-->
        <activity android:name=".TestActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>