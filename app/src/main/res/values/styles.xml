<resources>

    <!-- Base application theme. -->
    <!--   <style name="AppTheme"  parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme"  parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/c_ef5f45</item>
        <item name="colorPrimaryDark">@color/c_ef5f45</item>
        <item name="colorAccent">@color/c_ef5f45</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:listDivider">@drawable/bg_divider</item>
        <item name="colorControlNormal">@android:color/white</item>
        <!--沉浸状态栏-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--APP进入／退出动画-->
    <style name="horizontal_anim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--MainActivity 样式-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--自定义界面进入与退出动画-->
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>

        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <!-- 确定框 -->
    <style name="dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="radioBtn_main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/c_424242</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="image_comments">
        <item name="android:layout_marginLeft">@dimen/dp_60</item>
        <item name="android:layout_marginRight">@dimen/dp_60</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
    </style>

    <!--音乐类型-->
    <style name="textView_music_category">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--音乐首页生活需要有点闹-->
    <!--歌曲标题-->
    <style name="textView_music_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_120</item>
        <item name="android:textSize">@dimen/textSize_large_x</item>
        <item name="android:textColor">@color/c_424242</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:drawableLeft">@drawable/common_divide_vertical</item>
        <item name="android:background">@color/light_gray2</item>
        <item name="android:drawablePadding">@dimen/dp_30</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
    </style>

    <!--播放按钮-->
    <style name="imageView_life_play">
        <item name="android:layout_width">@dimen/dp_186</item>
        <item name="android:layout_height">@dimen/dp_186</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_marginBottom">@dimen/dp_150</item>
        <item name="android:background">@drawable/ic_music_play</item>
    </style>
    <!-- 歌曲描述-->
    <style name="textView_life_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/dp_90</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>
    <!-- 泡泡窗口弹入、 弹出动画-->
    <style name="pop_animation">
        <item name="android:windowEnterAnimation">@anim/anim_music_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_music_exit</item>
    </style>

    <!--听众数量-->
    <style name="textView_life_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_small_s</item>
        <item name="android:textColor">@color/c_feffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:drawableLeft">@drawable/ic_music_headset</item>
    </style>

    <!--    去除页面标题-->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--网络云音乐界面风格-->
    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
