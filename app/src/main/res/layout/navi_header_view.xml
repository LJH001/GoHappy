<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:padding="16dp"
    android:gravity="center"
    android:background="?attr/colorPrimaryDark">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_main_navi_header"
        android:layout_gravity="center_horizontal"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_main_navi_header"
        app:border_color="@color/primary_light"
        app:border_width="2dp"
        android:layout_marginBottom="@dimen/dp_15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/iv_main_navi_header_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/str_main_nav_header_desc"
            android:textSize="@dimen/textSize_large_x"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/iv_main_navi_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/str_main_nav_header_name"
            android:textSize="@dimen/textSize_large_x"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>