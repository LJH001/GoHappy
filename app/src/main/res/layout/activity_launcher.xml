<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom">
    <ImageView
        android:id="@+id/iv_launcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher"/>
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:text="3"
        android:textSize="@dimen/textSize_large_xx"
        android:textColor="@color/dark_grey"
        android:background="@drawable/bg_trans_circle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_marginBottom="@dimen/dp_360">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追逐梦想"
            android:textSize="@dimen/textSize_large_xxx"
            android:textStyle="italic"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_210"
            android:text="一起GoHappy"
            android:textSize="@dimen/textSize_large_xxx"
            android:textStyle="italic"
            android:textColor="@color/white"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_large_x"
        android:textColor="@color/c_424242"
        android:text="@string/str_version_num"
        android:layout_marginBottom="@dimen/dp_90"
        android:layout_gravity="bottom|center_horizontal"/>
</FrameLayout>
